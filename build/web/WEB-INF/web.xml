<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SaveUserServlet</servlet-name>
        <servlet-class>controllers.Users.SaveUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>controllers.Users.EditUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>controllers.Users.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePictureServlet</servlet-name>
        <servlet-class>controllers.Pictures.DeletePictureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPictureServlet</servlet-name>
        <servlet-class>controllers.Pictures.EditPictureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SavePictureServlet</servlet-name>
        <servlet-class>controllers.Pictures.SavePictureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PictureListServlet</servlet-name>
        <servlet-class>controllers.Pictures.PictureListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticateUserServlet</servlet-name>
        <servlet-class>controllers.Users.AuthenticateUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>controllers.Users.UserListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controllers.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginUserServlet</servlet-name>
        <servlet-class>controllers.Users.LoginUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowPictureServlet</servlet-name>
        <servlet-class>controllers.Pictures.ShowPictureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LocaleServlet</servlet-name>
        <servlet-class>controllers.LocaleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveUserServlet</servlet-name>
        <url-pattern>/SaveUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/user/edit/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/DeleteUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePictureServlet</servlet-name>
        <url-pattern>/picture/delete/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPictureServlet</servlet-name>
        <url-pattern>/picture/edit/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SavePictureServlet</servlet-name>
        <url-pattern>/picture/save/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PictureListServlet</servlet-name>
        <url-pattern>/picture/list/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticateUserServlet</servlet-name>
        <url-pattern>/user/authenticate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/users/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginUserServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/res/*</url-pattern>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowPictureServlet</servlet-name>
        <url-pattern>/picture/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LocaleServlet</servlet-name>
        <url-pattern>/change_locale/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
